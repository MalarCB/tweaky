<div id="content">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-sm-6 col-xs-10 col-md-offset-4 col-sm-offset-3 col-xs-offset-1">
        <div class="post-container">
          <%= render 'layouts/error' %>
          <div class="post-content">
            <div class="form-signin">
              <div class="heading-title">
                <h3><i class="fa fa-edit"></i> Sign up</h3>
              </div>
              <p>Sign up manually:</p>
            <%= form_for(@user ,:url => {:action => 'register'} ,:html => {:class => 'form-horizontal'}) do |f|  %>
                 <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <%= f.text_field :email, class: 'form-control input-md', placeholder: 'Email' %>
                  </div>
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                    <%= f.password_field :password, class: 'form-control input-md', placeholder: 'Password' %>
                  </div>
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                    <%= f.telephone_field :telephone_1, class: 'form-control input-md', placeholder: 'Telephone' %>
                  </div>
                  <div class="row">
                    <div class="col-sm-6">
                      <%= button_tag 'Cancel', class: "btn btn-primary btn-sm" %>
                      <%= f.submit 'Sign-Up', class: 'btn btn-primary btn-sm' %>
                    </div>
                  </div>
                  <hr>
                  <p>Sign up using social networks:</p>
                  <div class="row">
                    <div class="col-sm-6">
                      <a href="#" class="btn btn-default btn-block btn-sm marg-xs-5">
                        <i class="fa fa-twitter fa-tw fa-lg"></i> Signup with twitter</a>
                    </div>
                    <div class="col-sm-6">
                      <a href="#" class="btn btn-default btn-block btn-sm marg-xs-5">
                        <i class="fa fa-facebook-square fa-fb fa-lg"></i> Signup with facebook</a>
                    </div>
                  </div>
                  <hr>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- break -->
    </div>
  </div>
</div>
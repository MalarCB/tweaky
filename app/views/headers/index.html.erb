<div class="portlet">
  <div class="portlet-title">
    <header class="header b-b clearfix">
      <div class="row m-t-sm">
        <div class="col-sm-8 m-b-xs">
          <div class="btn-group">
            <%= link_to 'New Header' ,new_header_path ,:class=> "btn btn-sm btn-primary" %>
          </div>
        </div>
        <div class="col-sm-4 m-b-xs">
          <div class="input-group">
            <input type="text" class="input-sm form-control" placeholder="Search">
            <span class="input-group-btn">
              <button class="btn btn-sm btn-default" type="button">Go!</button>
            </span>
          </div>
        </div>
      </div>
    </header>
  </div>
  <div class="portlet-body">
    <div class="table-scrollable">
      <table class= "table table-striped table-bordered table-hover">
        <thead>
        <tr>
          <th>Heading</th>
          <th>Imgurl</th>
          <th>Status</th>
          <th>Detailurl</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @headers.each do |header| %>
            <tr>
              <td><%= header.heading %></td>
              <td><%= header.imgurl %></td>
              <td><%= header.status %></td>
              <td><%= header.detailurl %></td>
              <td><%= link_to 'Show', header %></td>
              <td><%= link_to 'Edit', edit_header_path(header) %></td>
              <td><%= link_to 'Destroy', header, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


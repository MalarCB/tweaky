<div id="content">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-sm-6 col-xs-10 col-md-offset-4 col-sm-offset-3 col-xs-offset-1">
        <div class="post-container">
          <div class="post-content">
            <%= form_for(@product) do |f| %>
                <% if @product.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
                      <ul>
                        <% @product.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                      </ul>
                    </div>
                <% end %>

                <div class="field">
                  <%= f.label :name %><br>
                  <%= f.text_field :name, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :imagename %><br>
                  <%= f.text_field :imagename, class: 'form-control input-md'%>
                </div>
                <div class="field">
                  <%= f.label :url %><br>
                  <%= f.text_field :url , class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :prixvente %><br>
                  <%= f.text_field :prixvente , class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :prixnet %><br>
                  <%= f.text_field :prixnet, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :commission %><br>
                  <%= f.text_field :commission, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :stock %><br>
                  <%= f.number_field :stock, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :likes %><br>
                  <%= f.number_field :likes, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :downloads %><br>
                  <%= f.number_field :downloads, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :tags %><br>
                  <%= f.text_area :tags, class: 'form-control input-md required' %>
                </div>
                <div class="field">
                  <%= f.label :status %><br>
                  <%= f.check_box :status, class: 'form-control input-md required' %>
                </div>
                <div class="actions">
                  <%= f.submit class: "btn btn-lg btn-success"%>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
   </div>
 </div>


<div id="content">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-sm-6 col-xs-10 col-md-offset-4 col-sm-offset-3 col-xs-offset-1">
        <div class="post-container">
          <div class="post-content">
            <%= form_for(@produit) do |f| %>
                <% if @produit.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@produit.errors.count, "error") %> prohibited this produit from being saved:</h2>

                      <ul>
                        <% @produit.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                <% end %>

                <div class="field">
                  <%= f.label :name %><br>
                  <%= f.text_field :name, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :product_desc %><br>
                  <%= f.text_area :product_desc, class: 'form-control input-md' %>
                </div>

                <div class="field">
                  <%= f.label :imagename %><br>
                  <%= f.text_field :imagename, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :url %><br>
                  <%= f.text_field :url, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :prixvente %><br>
                  <%= f.text_field :prixvente, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :prixnet %><br>
                  <%= f.text_field :prixnet, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :devise %><br>
                  <%= f.text_field :devise, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :commission %><br>
                  <%= f.text_field :commission, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :stock %><br>
                  <%= f.number_field :stock, class: 'form-control input-md' %>
                </div>

                <div class="field">
                  <%= f.label :likes %><br>
                  <%= f.number_field :likes, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :downloads %><br>
                  <%= f.number_field :downloads, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :tags %><br>
                  <%= f.text_area :tags, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :status %><br>
                  <%= f.check_box :status, class: 'form-control input-md' %>
                </div>
                <div class="field">
                  <%= f.label :vues %><br>
                  <%= f.number_field :vues, class: 'form-control input-md' %>
                </div> <br>
                <div class="actions">
                  <%= f.submit class: 'btn btn-primary' %>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

